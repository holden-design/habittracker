{
  "name": "Personal Systems",
  "version": "0.1.0",
  "description": "A visual daily review & planning system with habit tracking",
  "main": "dist/index.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "react-scripts start",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "dev:server": "ts-node server.ts",
    "build": "npm run build:react && npm run build:electron && npm run build:server",
    "build:react": "react-scripts build",
    "build:electron": "tsc -p ./tsconfig.json",
    "build:server": "tsc server.ts --outDir dist --target es2020 --module commonjs --esModuleInterop --strict",
    "start:server": "node dist/server.js",
    "eject": "react-scripts eject",
    "dist": "npm run build && electron-builder",
    "test": "react-scripts test"
  },
  "dependencies": {
    "@types/express": "^4.17.25",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "pg": "^8.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/node": "^20.19.33",
    "@types/pg": "^8.16.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "electron-is-dev": "^2.0.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.personalsystems.app",
    "productName": "Personal Systems",
    "files": [
      "dist/**/*",
      "public/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    }
  }
}
